<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.App.Light"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">#ffffff</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">#3a80ba</item>
        <item name="colorPrimary">#3a80ba</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorSurface">#ffffff</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorSecondary">?colorAccent</item>
        <item name="colorOnSecondary">#ffffff</item>
        <item name="colorPrimaryDark">#3677ae</item>
        <item name="colorError">#c0392b</item>
        <item name="colorOnError">#ffffff</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="tabStyle">@style/Widget.App.Tab</item>
        <item name="android:textColorPrimary">@color/text_color_primary_light</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="divider">@drawable/divider_light</item>
        <item name="colorOutline">#BFBFBF</item>
        <item name="colorDivider">#efefef</item>
        <item name="colorControlHighlightOnPrimary">#33ffffff</item>
        <item name="cornerRadius">16dp</item>
        <item name="outlineWidth">1dp</item>
    </style>

    <style name="Theme.App.Light"
        parent="Base.Theme.App.Light">

        <item name="android:navigationBarColor">?colorPrimaryDark</item>
    </style>


    <style name="Theme.App.Compose"
        parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:windowBackground">#2c2c2c</item>
    </style>

    <style name="Theme.App.Dark"
        parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">#2c2c2c</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">#3a80bc</item>
        <item name="colorPrimary">#212121</item>
        <item name="colorOnPrimary">#deffffff</item>
        <item name="colorSurface">#2c2c2c</item>
        <item name="colorOnSurface">#ffffff</item>
        <item name="colorSecondary">?colorAccent</item>
        <item name="colorOnSecondary">#ffffff</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorError">#c0392b</item>
        <item name="colorOnError">#ffffff</item>
        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.App.MaterialAlertDialog.Dark
        </item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.Dark</item>
        <item name="colorControlHighlightOnPrimary">#33ffffff</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Dark</item>
        <item name="tabStyle">@style/Widget.App.Tab.Dark</item>
        <item name="android:textColorPrimary">@color/text_color_primary_dark</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="divider">@drawable/divider_dark</item>
        <item name="colorOutline">#3a3a3a</item>
        <item name="colorDivider">#393939</item>
        <item name="cornerRadius">16dp</item>
        <item name="outlineWidth">1dp</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.TextButton</item>
    </style>

    <style name="Theme.App.Amoled"
        parent="Theme.App.Dark">
        <item name="android:windowBackground">#000000</item>
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#deffffff</item>
        <item name="colorPrimary">#000000</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Amoled</item>
        <item name="colorOnPrimary">#d9ffffff</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="divider">@drawable/divider_amoled</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog.Dark"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">?colorOnSurface</item>
    </style>


    <style name="ThemeOverlay.App.AlertDialog.Dark"
        parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">?colorOnSurface</item>
    </style>
</resources>
